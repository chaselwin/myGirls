<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chasel.girl.dao.IImageDao">
  
  <select id="findAll" resultType="com.chasel.girl.vo.Image">
  	SELECT 
	  	i.image_id id,
	  	i.image_type type,
	  	i.image_name name,
	  	i.image_title title,
	  	i.image_memo memo,
	  	i.image_createTime createTime,
	  	i.image_creator creator
  	FROM t_image i
  	<where>
  		1=1
	  	<if test='id!=null and id!=""'>
	  		AND image_id=#{id,jdbcType=INTEGER}
	  	</if>
	  	<if test='type!=null and type!=""'>
	  		AND image_type LIKE CONCAT(CONCAT('%',#{type,jdbcType=VARCHAR}),'%')
	  	</if>
	  	<if test='name!=null and name!=""'>
	  		AND image_name LIKE CONCAT(CONCAT('%',#{name,jdbcType=VARCHAR}),'%')
	  	</if>
	  	<if test='title!=null and title!=""'>
	  		AND image_title LIKE CONCAT(CONCAT('%',#{title,jdbcType=VARCHAR}),'%')
	  	</if>
	  	<if test='memo!=null and memo!=""'>
	  		AND image_memo LIKE CONCAT(CONCAT('%',#{memo,jdbcType=VARCHAR}),'%')
	  	</if>
	  	<if test='creator!=null and creator!=""'>
	  		AND image_creator LIKE CONCAT(CONCAT('%',#{creator,jdbcType=VARCHAR}),'%')
	  	</if>
  	</where>
  	ORDER BY i.image_createTime DESC
  </select>
  
  <insert id="save" parameterType="com.chasel.girl.vo.Image">
  	INSERT INTO t_image
  	(
		image_type,	 
	  	image_name,
	  	image_title,
	  	image_memo,
	  	image_createTime,
	  	image_creator
  	)
  	VALUES
  	(
	  	#{type,jdbcType=VARCHAR},
	  	#{name,jdbcType=VARCHAR},
	  	#{title,jdbcType=VARCHAR},
		#{memo,jdbcType=VARCHAR},
		#{createTime,jdbcType=TIMESTAMP},
		#{creator,jdbcType=VARCHAR}
	)
  </insert>
  
  <delete id="delete" parameterType="int">
  	DELETE FROM t_image WHERE image_id=#{id}
  </delete>
  
  <update id="update" parameterType="com.chasel.girl.vo.Image">
  	UPDATE t_image SET 
	  	image_type=#{type,jdbcType=VARCHAR},
	  	image_title=#{title,jdbcType=VARCHAR},
	  	image_memo=#{memo,jdbcType=VARCHAR}
  	WHERE image_id=#{id}
  </update>
  
  <select id="findById" parameterType="int" resultType="com.chasel.girl.vo.Image">
  	SELECT 
  		i.image_id id,
	  	i.image_type type,
	  	i.image_name name,
	  	i.image_title title,
	  	i.image_memo memo,
	  	i.image_createTime createTime,
	  	i.image_creator creator
	FROM t_image i
	WHERE i.image_id=#{id}
  </select>
 
</mapper>